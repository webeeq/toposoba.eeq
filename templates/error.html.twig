{% extends 'base.html.twig' %}

{% block title %}{{ 'error.title'|trans({'%code%': 500}) }}{% endblock %}

{% block stylesheets %}
    <style>
        body {
            margin: 30px;
            padding: 0;
            border: 0;
            background: #FFFFFF;
        }

        h1, a, p {
            width: auto;
            height: auto;
            margin: 0;
            padding: 0;
            border: 0;
            background: transparent;
            color: #000000;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 20px;
            font-style: normal;
            font-weight: bold;
            text-decoration: none;
            text-transform: uppercase;
            text-align: center;
            line-height: 22px;
            letter-spacing: 0;
        }

        h1, h1 a {
            margin-bottom: 6px;
            font-size: 40px;
            line-height: 38px;
        }

        a:hover {
            color: #FF0000;
        }

        p {
            margin-bottom: 4px;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>{{ 'error.title'|trans({'%code%': 500}) }}</h1>
    <p><a href="{{ path('main_page') }}">{{ 'error.link'|trans }}</a></p>
{% endblock %}
